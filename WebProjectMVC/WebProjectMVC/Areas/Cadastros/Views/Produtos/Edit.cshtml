@model WebProjectMVC.Modelo.Cadastros.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Produto";
}

@using (Html.BeginForm("Edit", "Produtos", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">
            Alteração dos dados de um PRODUTO
        </div>
        <div class="panel-body">
            @Html.HiddenFor(model => model.IdProduto)
            @Html.Partial("~/Areas/Cadastros/Views/Produtos/_PartialEditProduto.cshtml", Model)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Gravar alterações" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
@section ScriptPage {
    <link rel="stylesheet" href="~/Scripts/jquery-ui-1.12.1.custom/jquery-ui.css" />
    <script src="~/Scripts/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.custom/datepicker-pt-BR.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
            $("#datepicker").datepicker();
        });
    </script>
}