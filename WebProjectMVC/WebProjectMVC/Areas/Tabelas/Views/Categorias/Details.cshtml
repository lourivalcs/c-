@model WebProjectMVC.Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar detalhes categoria";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizar detalhes de categoria
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Tabelas/Views/Categorias/_PartialDetailsCategoria.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.IdCategoria }, new { @class = "btn btn-info" })
        @Html.ActionLink("Listar Categorias", "Index", null, new { @class = "btn btn-info" })
    </div>
    @Html.Partial("~/Areas/Cadastros/Views/Produtos/_PorCategoria.cshtml", Model.Produtos.ToList())
</div>